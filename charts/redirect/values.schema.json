{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "ingressClassName": { "type": "string" },
    "entryPoints": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "redirects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["host", "regex", "replacement", "permanent", "image", "port"],
        "properties": {
          "name": { "type": "string" },
          "host": { "type": "string", "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*$" },
          "regex": { "type": "string" },
          "replacement": { "type": "string" },
          "permanent": { "type": "boolean" },
          "image": { "type": "string" },
          "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
          "tlsSecretName": { "type": "string" },
          "issuer": { "type": "string" }
        }
      }
    }
  }
}
